# ============================================
# ONCOONE EDUCATION - ENVIRONMENT CONFIGURATION
# Production-Ready Payment System
# ============================================

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL - Production)
POSTGRES_DB=oncoone_db
POSTGRES_USER=oncoone_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Email Configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# STRIPE PAYMENT CONFIGURATION (REQUIRED)
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys

# Test Mode Keys (for development)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# Live Mode Keys (for production) - UNCOMMENT AND USE IN PRODUCTION
STRIPE_PUBLIC_KEY=pk_live_your_public_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here

# Webhook Secret (for payment confirmations)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Settings
STRIPE_CURRENCY=cad
STRIPE_STATEMENT_DESCRIPTOR=OncoOne Education

# ============================================
# BUSINESS INFORMATION
# ============================================
BUSINESS_NAME=OncoOne Education
BUSINESS_EMAIL=info@oncoesthetics.ca
BUSINESS_PHONE=+1-XXX-XXX-XXXX
BUSINESS_ADDRESS=Your Business Address, Canada
BUSINESS_CURRENCY=cad

# ============================================
# PAYMENT SECURITY SETTINGS
# ============================================

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_LENGTH=6

# Payment Limits (in CAD)
MIN_PAYMENT_AMOUNT=10.00
MAX_PAYMENT_AMOUNT=10000.00
PAYMENT_TIMEOUT_MINUTES=30

# Tax Configuration (Canadian GST/HST)
# Adjust based on your province:
# - Alberta, NWT, Nunavut, Yukon: 0.05 (5% GST)
# - Ontario: 0.13 (13% HST)
# - BC, Manitoba, Saskatchewan: 0.05 + provincial PST
# - Atlantic provinces: 0.15 (15% HST)
TAX_RATE=0.05
TAX_NAME=GST

# ============================================
# SECURITY SETTINGS
# ============================================

# Session Security
SESSION_COOKIE_AGE=3600

# CSRF Protection (add your domain)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# DEPLOYMENT NOTES
# ============================================

# 1. Copy this file to .env and update all values
# 2. Never commit .env to version control
# 3. Use strong passwords and keep API keys secure
# 4. Test with Stripe test keys before going live
# 5. Enable Stripe webhooks for payment confirmations
# 6. Set DEBUG=False in production
# 7. Configure SSL/HTTPS for production
# 8. Regularly rotate secrets and API keys

# For more information, see:
# - Stripe Documentation: https://stripe.com/docs
# - Django Deployment: https://docs.djangoproject.com/en/stable/howto/deployment/
